# Server Configuration
PORT=3000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_anon_key

# Contentstack Configuration
CONTENTSTACK_API_KEY=your_contentstack_api_key
CONTENTSTACK_DELIVERY_TOKEN=your_contentstack_delivery_token
CONTENTSTACK_ENVIRONMENT=development
CONTENTSTACK_REGION=us
CONTENTSTACK_LOCALES=en-us,es-es,fr-fr

# Contentstack SDK Configuration (optional - defaults provided)
# Timeout for API requests in milliseconds (recommended: 30000-60000)
CONTENTSTACK_TIMEOUT=30000
# Number of retry attempts for failed requests (recommended: 2-5)
CONTENTSTACK_RETRY_LIMIT=3
# Delay between retry attempts in milliseconds (recommended: 1000-5000)
CONTENTSTACK_RETRY_DELAY=1000
# Custom ContentStack host (only needed for enterprise/custom deployments)
# CONTENTSTACK_HOST=custom-host.contentstack.io

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
# Note: Using text-embedding-3-small for 1536 dimensions
# If you want to use text-embedding-3-large, update config.js to use 3072 dimensions

# Optional Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
CONTENT_BASE_URL=https://your-website.com

# Logging Configuration (optional)
LOG_LEVEL=info