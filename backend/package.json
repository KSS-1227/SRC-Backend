{
  "name": "search-backend",
  "version": "1.0.0",
  "description": "Production-ready backend with Node.js, Express, Supabase, Contentstack, and OpenAI",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "sync": "node jobs/syncContent.js",
    "sync:selective": "node jobs/syncContent.js --content-types",
    "setup:webhooks": "node scripts/setup-webhooks.js",
    "deploy": "node scripts/deploy.js",
    "test:connection": "node -e \"const cs = require('./services/contentstack'); cs.getContentTypes().then(() => console.log('✅ Connection OK')).catch(e => console.error('❌ Connection failed:', e.message))\"",
    "health": "node -e \"const http = require('http'); http.get('http://localhost:3000/api/health', res => res.statusCode === 200 ? console.log('✅ Healthy') : console.log('❌ Unhealthy'))\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node test-integration.js",
    "test:integration:verbose": "node test-integration.js --verbose",
    "test:integration:coverage": "node test-integration.js --coverage",
    "test:integration:env": "node test-integration.js --env-check"
  },
  "keywords": [
    "express",
    "supabase",
    "contentstack",
    "openai",
    "search",
    "backend"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "contentstack": "^3.26.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "retry": "^0.13.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "utils/**/*.js",
      "!utils/config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
